@model MyDataCenter.Models.POCOS.Month

@{
    ViewBag.Title = "Update This Month's Budget";
}
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<h1>@ViewBag.Title.</h1>

<h2>Update Budget Basics</h2>
@using (Html.BeginForm("DisplayMonthInfoForEdditing", "Budget"))
{
    <p>Budget Name</p>
    @Html.TextBoxFor(model => model.Name)
    <br />
    <br />
    <p>Total Pay</p>
    @Html.TextBoxFor(model => model.TotalPay)
    <br />
    <br />
    <p>Rent</p>
    @Html.TextBoxFor(model => model.Rent)
    <br />
    <br />
    <p>Utilities</p>
    @Html.TextBoxFor(model => model.Utilities)
    <br />
    <br />

    <input type="submit" value="Update Budget Info" />
}

<h2>This Month's Expenses</h2>

@using (Html.BeginForm("UpdateExpenseInfo", "Budget"))
{
    <h2>Required Expenses</h2>
    <table>
        <tbody>        
        @foreach (var item in Model.RequiredExpenses)
        {
            <tr>
                <td><input id="expenses" name="expensesIds" type="checkbox" value="@item.Id"/> </td>
                <td>@item.Name</td>
                <td>@item.Price</td>
            </tr>
        }  
        </tbody>

        <tr>
            <td><input type="submit" value="Save" id="ButtonSubmit" /></td>

        </tr>
    </table>
}

@using (Html.BeginForm("UpdateExpenseInfo", "Budget"))
{
    <h2>Monthly Expenses</h2>
    <table>
        <tbody>
            @foreach (var item in Model.MonthlyExpenses)
            {
                <tr>
                    <td><input id="expenses" name="expensesIds" type="checkbox" value="@item.Id" /> </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                </tr>
            }
        </tbody>
    </table>

    <tr>
        <td><input type="submit" value="Save" id="ButtonSubmit" /></td>

    </tr>
}

@using (Html.BeginForm("UpdateExpenseInfo", "Budget"))
{
    <h2>Luxury Expenses</h2>
    <table>
        <tbody>
            @foreach (var item in Model.LuxuryExpenses)
            {
                <tr>
                    <td><input id="expenses" name="expensesIds" type="checkbox" value="@item.Id" /> </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                </tr>
            }
        </tbody>
        <tr>
            <td><input type="submit" value="Save" name="saveButton" /></td>
            <td><input type="submit" value="Delete" name="deleteButton" /></td>
        </tr>
    </table>


}

<br />
<br />
<br />

@using (Html.BeginForm("NewExpense", "Budget"))
{
    <input type="submit" value="Save New Expense" name="expenseButton" />
}


    