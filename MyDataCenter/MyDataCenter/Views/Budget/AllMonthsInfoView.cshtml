            <td><input type="submit" value="Delete" name="monthId" class="btn btn-danger btn-sm" /></td>
            </tr>
        }
        <tr>
        </tr>
    </table>

}

<table>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><input id="month" name="monthID" type="checkbox" value="@item.Id" /> </td>
                <td>@item.Name</td>
            </tr>
        }
    </tbody>

    <tr>
        <td><input type="submit" value="Save" id="ButtonSubmit" /></td>

    </tr>
</table>

