    <td><input type="submit" value="Create New Month" name="saveButton" class="btn btn-success"/></td>
}

@using (Html.BeginForm("DeleteMonthInfo", "Budget"))
{
    <h2>All Months</h2>
    <table id="table"  class="table table-striped table-hover ">
        <tr>
            <th>Name</th>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
